@using EntityLayer.Concrete
@model List<Admin>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h2>Yetkilendirmeler</h2>
            </div>
        </div>
    </div>
</section>
<section class="content">
    <!-- Default box -->
    <div class="card card-solid">
        <div class="card-body pb-0">
            <div class="row d-flex align-items-stretch">
                <table class="table table-bordered">
                    <tr>
                        <th>#</th>
                        <th>Kullanıcı Mail</th>
                        <th>Yetki</th>
                        <th>Status</th>
                        @*<th>Pasif Yap</th>*@
                        <th>İşlemler</th>
                    </tr>
                    @foreach (var item in Model)
                    {
                    <tr>
                        <th>@item.AdminID</th>
                        <td>@item.AdminUserName</td>
                        <td>@item.AdminRole</td>
                        <td>Aktif</td>
                        @*<td><a href="#" class="btn btn-danger">Pasif Yap</a></td>*@
                        <td><a href="/Authorization/EditAdmin/@item.AdminID" class="btn btn-warning">Güncelle</a></td>
                    </tr>
                    }
                </table>
            </div>
        </div>
    </div>
</section>
<a href="/Authorization/AddAdmin/" class="btn btn-primary">Kullanıcı Ekle</a>